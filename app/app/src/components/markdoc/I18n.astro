---
import { render } from 'astro:content'

interface Props
{
	locales: Record<string, string>
	renderMarkdown?: boolean
}

let content: any
if (Astro.props.renderMarkdown)
{
	const { Content } = await render({
		id: null as any,
		body: Astro.props.locales[Astro.currentLocale!] ?? Astro.props.locales['en'] ?? '',
		collection: null as any,
		data: {},
	})
	content = Content
}
else
{
	content = Astro.props.locales[Astro.currentLocale!] ?? Astro.props.locales['en'] ?? ''
}
---

{content}
